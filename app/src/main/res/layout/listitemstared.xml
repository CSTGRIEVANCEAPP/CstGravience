<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="7dp"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="5dp"

 >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:text="Grievance"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints">

            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/grievance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="23dp"
                    android:text="Lets be supportiveLets be
                supportiveLLets be supportiveLets be supportiveets be supportiveLets
                be supportive,Lets be supportive"
                    tools:ignore="MissingConstraints">

                </TextView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/addtostarred"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="160dp"

                    android:text="Delete">


                </Button>

            </LinearLayout>

        </LinearLayout>



</androidx.cardview.widget.CardView>