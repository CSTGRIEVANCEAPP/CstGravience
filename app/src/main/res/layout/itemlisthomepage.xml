<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardElevation="8dp"
    android:id="@+id/maincard"
    android:layout_marginBottom="5dp"
    android:elevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/GVRANCE_Title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Grievance"
            android:textColor="@color/teal_700"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints">

        </TextView>
        <TextView
            android:id="@+id/posted_ON_date"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-18dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/grievance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="Lets be supportiveLets be
                supportiveLLets be supportiveLets be supportiveets be supportiveLets
                be supportive,Lets be supportive"
                tools:ignore="MissingConstraints">

            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/addtostarred"
                style="@style/onlyicon"
                android:layout_width="55dp"
                android:backgroundTint="@drawable/buttonc"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                app:icon="@drawable/ic_baseline_star_border_24"
                tools:ignore="MissingConstraints">




            </Button>



        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>